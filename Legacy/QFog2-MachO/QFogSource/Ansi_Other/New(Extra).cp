//With CWP 3 and the Old ANSI Libraries,//the project compiles but it doesn't link.//It doesn't link because it wants definitions for new[] and delete[].//This file provides these definitions.//It is a snippet from the New.cp file found in MSL of CWP3#include <new.h>#include <stdlib.h>#include <MacMemory.h>#if __MWERKS__>=0x2020#pragma overload	extern void *operator new[](size_t) throw(bad_alloc);//#pragma overload	extern void *operator new[](size_t,const nothrow_t &) throw();#pragma overload	extern void operator delete[](void *) throw();#endif//#if NEWMODE!=NEWMODE_NONE/************************************************************************//*	Purpose..: 	Array allocation/deallocation functions					*//*	Input....:	---														*//*	Return...:	---														*//************************************************************************/#if __MWERKS__>=0x2020extern void *operator new[](size_t size) throw(bad_alloc){	return operator new(size);}/*extern void *operator new[](size_t size,const nothrow_t & nt) throw(){	return operator new(size,nt);}*/extern void operator delete[](void *ptr) throw(){	operator delete(ptr);}#endif//#endif